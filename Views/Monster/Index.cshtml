@model MonsterData

<div class="row row-cols-md-2 py-5 d-flex justify-content-center">
	<form method="post" asp-action="Index" asp-controller="Monster" class="mb-4 order-last order-md-first">
		<div class=" py-3 justify-content-center">
			<div class="row row-cols-2 row-cols-md-1">
				<div class="col-12 col-md-4">
					<label class="form-label text-dark fw-bold fs-3" asp-for="Name">Avatar Name:</label>
					<input class="form-control" asp-for="Name" />
				</div>

				<div class="col">
					<button name="archetype" value="Warrior" type="submit" class="mt-3 me-3 btn btn-danger btn-lg">Warrior</button>
				</div>
				<div class="col">
					<button name="archetype" value="Illusionist" type="submit" class="mt-3 btn btn-secondary btn-lg">Illusionist</button>
				</div>
				<div class="col">
					<button name="archetype" value="Rogue" type="submit" class="mt-3 btn btn-primary btn-lg">Rogue</button>
				</div>
				<div class="col">
					<button name="archetype" value="Healer" type="submit" class="mt-3 btn btn-success btn-lg">Healer</button>
				</div>
				<div class="col">
					<button name="archetype" value="Necromancer" type="submit" class="mt-3 btn btn-dark btn-lg">Necromancer</button>
				</div>
				<div>
					<button name="archetype" value="Paladin" type="submit" class="mt-3 btn btn-warning btn-lg">Paladin</button>
				</div>
			</div>
		</div>
	</form>
	<div class="card bg-secondary border border-2 border-dark shadowMe" style="width: 18rem;">
		<img src="@ViewBag.HeroImage" class="card-img-top shadow pt-2 rounded-5" alt="...">
		<div class="card-body">
			<h5 class="card-title">Name: @Model.Name</h5>
			<div class="row row-cols-md-2 gy-3 mb-3 mt-3">
				<div class="col d-flex">
					<img src="~/img/heart.png" alt="" height="30" />
					<h6 class="ms-2">HP: @Model.Hitpoints</h6>
					@* <span class="ps-3 bg-secondary">@Model.Hitpoints</span> *@
				</div>

				<div class="col d-flex">
					<img src="~/img/sword.png" alt="" height="30" />
					<h6 class="ms-2">ATK: @Model.Strength</h6>
					@* <span class="ps-3 bg-secondary">@Model.Strength</span> *@
				</div>

				<div class="col d-flex">
					<img src="~/img/stamina.png" alt="" height="30" />
					<h6 class="ms-2">STA: @Model.Stamina</h6>
					@* <span class="ps-3 bg-secondary">@Model.Stamina</span> *@
				</div>

				<div class="col d-flex">
					<img src="~/img/potion.png" alt="" height="30" />
					<h6 class="ms-2">MP: @Model.Mana</h6>
					@* <span class="ps-3 bg-secondary">@Model.Mana</span> *@
				</div>

			</div>
			<div>
				<h5 class="card-title">Archetype: @Model.Archetype</h5>
			</div>
		</div>
	</div>
</div>
<div class="row">
	<div class="col d-flex justify-content-center">
		<a type="button" asp-action="Index" asp-controller="Home" class="fw-bold btn btn-light shadowMe border border-2 border-dark">Continue</a>
	</div>
</div>