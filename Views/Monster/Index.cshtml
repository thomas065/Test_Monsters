@model MonsterData



<div class="row row-cols-md-2 py-5 d-flex justify-content-center">
	<form method="post" asp-action="Index" asp-controller="Monster" class="mb-4 order-last order-md-first">
		<div class="row py-3 justify-content-center">
			<div class="col-4">
				<label class="form-label text-dark fw-bold" asp-for="Name">Avatar Name:</label>
				<input class="form-control" asp-for="Name" />
				<button type="submit" class="mt-3 me-3 btn btn-primary btn-lg">Create</button>
				<a type="button" asp-action="Index" asp-controller="Home" class="mt-3 btn btn-dark btn-lg">EXIT</a>
			</div>
		</div>
	</form>
	<div class="card bg-secondary border border-2 border-dark shadowMe" style="width: 18rem;">
		<img src="~/img/skeletonwarrior.gif" class="card-img-top shadow pt-2 rounded-5" alt="...">
		<div class="card-body">
			<h5 class="card-title">@Model.Name</h5>
			<div class="col-12">
				<div class="d-flex">
					<img src="~/img/heart.png" alt="" height="30" />
					@* <h6 class="ps-3 pe-1">Hitpoints:</h6> *@
					<p class="ps-3">@Model.Hitpoints</p>
				</div>

				<div class="d-flex">
					<img src="~/img/sword.png" alt="" height="30" />
					@* <h6 class="ps-3 pe-1">Strength:</h6> *@
					<p class="ps-3">@Model.Strength</p>
				</div>

				<div class="d-flex">
					<img src="~/img/stamina.png" alt="" height="30" />
					@* <h6 class="ps-3 pe-1">Stamina:</h6> *@
					<p class="ps-3">@Model.Stamina</p>
				</div>

				<div class="d-flex">
					<img src="~/img/potion.png" alt="" height="30" />
					@* <h6 class="ps-3 pe-1">Mana:</h6> *@
					<p class="ps-3">@Model.Mana</p>
				</div>

			</div>
			<h6>Bio:</h6>
			<textarea class="card-text w-100">@Model.Bio</textarea>
		</div>
	</div>
</div>